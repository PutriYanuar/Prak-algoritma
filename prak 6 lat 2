# Fungsi untuk menentukan apakah tahun kabisat
def cek_kabisat(tahun):
    if (tahun % 400 == 0) or (tahun % 4 == 0 and tahun % 100 != 0):
        return True
    else:
        return False

# Fungsi untuk menentukan jumlah hari dalam bulan
def jumlah_hari(bulan, tahun=2024):
    if bulan in [1, 3, 5, 7, 8, 10, 12]:
        return 31
    elif bulan in [4, 6, 9, 11]:
        return 30
    elif bulan == 2:
        if cek_kabisat(tahun):
            return 29
        else:
            return 28
    else:
        return None

# Program utama
print("Program ini akan menentukan jumlah hari dalam bulan tertentu")
print("Masukkan 0 untuk menghentikan program")

while True:
    bulan = int(input("Masukkan bulan (1-12): "))
    if bulan == 0:
        print("Terima kasih sudah menggunakan program saya, sampai berjumpa lagi.")
        break
    if bulan == 2:
        tahun = int(input("Masukkan tahun (e.g., 2021): "))
        hari = jumlah_hari(bulan, tahun)
    else:
        hari = jumlah_hari(bulan)
    
    if hari:
        print(f"{hari} hari dalam sebulan\n")
    else:
        print("Input bulan tidak valid!\n")
