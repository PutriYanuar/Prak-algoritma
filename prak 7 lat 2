# Fungsi untuk menentukan akhiran ordinal (st, nd, rd, th)
def ordinal_suffix(angka):
    if 10 <= angka % 100 <= 20:
        suffix = "th"
    else:
        last_digit = angka % 10
        if last_digit == 1:
            suffix = "st"
        elif last_digit == 2:
            suffix = "nd"
        elif last_digit == 3:
            suffix = "rd"
        else:
            suffix = "th"
    return suffix

# Fungsi utama untuk menjalankan program
def main():
    print("Ordinal Number")
    print("ketik 0 untuk menghentikan program")

    while True:
        angka = int(input("masukkan angka: "))
        suffix = ordinal_suffix(angka)
        print((angka, f"'{suffix}'"))

        if angka == 0:
            print("terima kasih telah menggunakan program saya")
            break

# Panggil fungsi utama
main()
